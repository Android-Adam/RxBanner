<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <cn.levey.bannerlib.RxBanner
            android:id="@+id/rx_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            banner:rb_timeInterval="300"
            banner:rb_infinite="true"
            banner:rb_autoPlay="true"
            banner:rb_orderType="desc"
            banner:rb_indicator_layout_gravity="center_horizontal|bottom"
            banner:rb_indicator_selected_color="@color/colorAccent"
            banner:rb_indicator_unselected_color="@color/colorPrimary"/>

    </LinearLayout>




